@model IEnumerable<ThreeDPrinters>

@{
    ViewData["Title"] = "Printer List";
}

<h1>PrinterList</h1>
<div class="table-responsive">
    <table class="table table-striped table-hover align-middle">
        <thead>
            <tr class="table-primary">
                <th>
                    @Html.DisplayNameFor(model => model.PrinterImage)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Price)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.BuildVolume)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SKU)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody class="table-group-divider border">
    @foreach (var item in Model) {
            <tr>
                <td>
                    <img class="img-fluid img-thumbnail float-start" src="@Html.DisplayFor(modelItem => item.PrinterImage)" alt="@Html.DisplayFor(modelItem => item.SKU)">
                </td>
                    <td class="h3">
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td class="h4">
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td class="h4">
                    @Html.DisplayFor(modelItem => item.BuildVolume)
                </td>
                <td class ="h4">
                    @Html.DisplayFor(modelItem => item.SKU)
                </td>
            </tr>
    }
        </tbody>
    </table>
</div>